<?xml version="1.0" encoding="utf-8" ?>
<local:SettingSectionBase
    x:Class="AIDownloader.UI.Controls.Settings.AppLogSettingSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:community="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:AIDownloader.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:AIDownloader.UI.Extensions"
    xmlns:local="using:AIDownloader.UI.Controls.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <community:SettingsCard
        ActionIconToolTip="{ext:Locale Name=OpenLogFolder}"
        Click="OnItemClickAsync"
        Description="{ext:Locale Name=LogDescription}"
        Header="{ext:Locale Name=Log}"
        IsClickEnabled="True">
        <community:SettingsCard.HeaderIcon>
            <controls:FluentIcon Symbol="DocumentBulletList" />
        </community:SettingsCard.HeaderIcon>
    </community:SettingsCard>
</local:SettingSectionBase>
